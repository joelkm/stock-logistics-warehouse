<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template
        id="report_delivery_document"
        inherit_id="stock.report_delivery_document">
        
        <xpath expr="//t[@name='div_sched_date']" position="after">
            <div class="row mt-4 mb-4">
                <div t-if="o.volume" class="col-auto">
                    <strong>Total Volume:</strong>
                    <br/>
                    <span t-field="o.volume"/>
                    <span t-field="o.volume_uom_name"/>
                </div>
            </div>
        </xpath>

    </template>

</odoo>
